package apps;

import static org.junit.Assert.*;

import org.junit.Test;

public class Butaca {
	
	//Atributos
	private boolean estaOcupada;
	
	//Constructor
	
	public Butaca() {
		estaOcupada = true;
	}
	
	//MÃ©todos
	public boolean butacaDisponible(){
		if (estaOcupada == false) {
			return true;
		}
		
		return false;
	}
	
	public void ocuparButaca() {
		this.estaOcupada = true;
	}
	
	@Test
	public void hola() {
		assertFalse();
	}

}
